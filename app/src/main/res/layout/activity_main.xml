<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="8dp"
        android:iconifiedByDefault="false"
        android:background="@drawable/sb_background"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search apps & game...">

        <ImageView
            android:id="@+id/microphone_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/mic"/>

    </SearchView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/search_view"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/bell" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="-14dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/user" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sections_layout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@id/search_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foryou_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:onClick="onSectionClick"
            android:text="For You"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/topcharts_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:onClick="onSectionClick"
            android:text="Top charts"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kids_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:onClick="onSectionClick"
            android:text="Kids"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categories_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:onClick="onSectionClick"
            android:text="Categories"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
